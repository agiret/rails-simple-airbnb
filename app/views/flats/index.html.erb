<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <% @flats.each do |flat| %>
    <div class="row">
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')">
          </div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <!-- <a href="/flats/309">More info</a> -->
            <%= link_to "Edit", edit_flat_path(flat) %>
            <!-- <a href="#" class="ml-3 text-warning">Edit</a> -->
            <%= link_to "Remove", flat_path(flat),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
            <!-- <a href="#" class="ml-3 text-danger">Remove</a> -->
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
